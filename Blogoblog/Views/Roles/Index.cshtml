﻿@{
    ViewData["Title"] = "Просмотр ролей";
}

<div clamarging background-white">
    <h4 class="center">Все роли</h4>
    <a class="text-blue" asp-area="" asp-controller="Roles" asp-action="AddRole">Добавить роль</a>
    @foreach (var role in Model)
    {
        <div class="card" style="width: 18rem; margin-top:30px">
            <div class="card-body">
                <h5 class="card-title" style="color:blue">@role.Role_Name</h5>
                <p class="text-muted" style="margin-top:30px">@role.Role_Description</p>
            </div>
        </div>
        <form method="get" asp-controller="Roles" asp-action="GetRoleById" asp-route-id="@role.Id" style="margin-top:50px">
            <input class="enter_submit" type="submit" value="Просмотреть" />
        </form>
    }
</div>
