@model Blogoblog.DAL.Models.User

@{
    ViewData["Title"] = "Update";
}

<form class="frm" method="post" asp-controller="Users" asp-action="ConfirmUpdating">
    <h1 class="h3 mb-3 fw-normal">Редактирование пользователя</h1>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" name="isUser" value="true" disabled>
        <label class="form-check-label">Пользователь</label>

        <input type="checkbox" class="form-check-input" name="isModerator" value="false">
        <label class="form-check-label">Модератор</label>

        <input type="checkbox" class="form-check-input" name="isAdministrator" value="false">
        <label class="form-check-label">Администратор</label>
    </div>

    <div class="form-group" style="margin-top:20%">
        <label for="floatingFirstName">Имя</label>
        <input asp-for="FirstName" class="form-control" id="floatingFirstName" placeholder="Василий" required>        
    </div>

    <div class="form-group" style="margin-top:5%">
        <label for="floatingLastName">Фамилия</label>
        <input asp-for="LastName" class="form-control" id="floatingLastName" placeholder="Иванов" required>        
    </div>

    <div class="form-group" style="margin-top:5%">
        <label for="floatingPassword">Пароль</label>
        <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="не забудьте" required>        
    </div>

    <div class="form-group center" style="margin-top:10%">
        <button type="submit" class="btn btn-success">Зарегистрироваться</button>
    </div>

    <button class="btn-primary" type="submit">Сохранить</button>
</form>